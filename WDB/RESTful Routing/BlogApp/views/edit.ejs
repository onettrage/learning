<% include partials/header %>

<div class="ui main text container segment">
    <div class="ui huge header">Edit <%= blog.title %></div>
<!--?_method=PUT after the action is used to keep the original URL the same - requires method-override package-->
    <form class="ui form" action="/blogs/<%= blog._id %>?_method=PUT" method="POST">
    <div class="field">
        <label>Title</label>
        <input type="text" name="blog[title]" value="<%= blog.title %>">
    </div>
    <div class="field">
        <label>Image</label>
        <input type="text" name="blog[image]" value=<%= blog.image %>>
    </div>
    <div class="field">
        <label>Written Content</label>
        <textarea name="blog[body]" placeholder="Edit your blog post here"><%= blog.body %></textarea>
    </div>
    <input class="ui teal button" type="submit">
</form>
</div>


<% include partials/footer %>